<div class="d-flex flex-column p-4" style="height: 100vh">
  <div class="">
    <h1 class="mb-5">Watch with style üç∏</h1>
  </div>
  <h4 class="">Discover our movie selection</h4>
  <div class="carousel-container flex-grow-1">
    <div class="carousel">
      <div class="carousel--wrap">
      <% @lists.each do |list| %>
        <div class="carousel--item py-1 px-3">
          <%= link_to watch_with_style_list_path(list) do %>
            <% if list.photo.attached? %>
              <figure><%= cl_image_tag list.photo.key %></figure>
            <% else %>
              <figure><img src="<%= "https://picsum.photos/seed/#{list.name}/500/300" %>" alt="" /></figure>
            <% end %>
            <h2><%= list.name %></h2>
          <% end %>
        </div>
      <% end %>
      </div>
      <div class="carousel--progress d-none">
        <div class="carousel--progress-bar"></div>
      </div>
    </div>
  </div>
  <div class="mt-5">
    <h4 class="mt-4">Or create your own</h4>
    <div class="mt-3">
      <%= render 'form', list: @list %>
    </div>
  </div>
</div>
<%= simple_form_for list, html: {class: "w-25"} do |f| %>
  <%= f.input :name, input_html: { placeholder: "Your dandy name"}, label: false, wrapper_html: { class: 'm-0'} %>
  <%= f.input :photo, as: :file, label: 'A dandy image maybe?', label_html: {class: "mt-3"} %>
  <%= f.submit 'Start', class: "btn btn-dark mt-3" %>
<% end %>